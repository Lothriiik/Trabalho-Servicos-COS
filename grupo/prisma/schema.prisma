generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Grupo {
  grupo_uuid       String  @id @default(uuid())
  grupo_titulo     String
  grupo_descricao  String
  usuario_uuid_fk  String

  grupoUsuarios    GrupoUsuario[] // relação 1:N

  @@map("grupos")
}

model GrupoUsuario {
  usuario_grupo_uuid String @id @default(uuid())
  usuario_uuid        String
  grupo_uuid_fk       String

  grupo               Grupo @relation(fields: [grupo_uuid_fk], references: [grupo_uuid])

  @@map("grupo_usuarios") 
}